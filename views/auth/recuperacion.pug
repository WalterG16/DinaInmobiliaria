extends ../layout/index

block contenido 
    div.py-10

        h1.text-6x1.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-6x1.font-bold.pb-5= pagina

        
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg 

        div.mt8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/recuperacion" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    
                    div(class="flex items-center justify-between")
                        a(href="/auth/registro" class=" text-gray-500 text-xs ") Crea una Cuenta
                        a(href="/auth/login" class=" text-gray-500 text-xs ") Ya tienes una cuenta? Inicia Sesion

                    input(class="w-full bg-sky-400 hover:bg-sky-600 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar Sesion")
