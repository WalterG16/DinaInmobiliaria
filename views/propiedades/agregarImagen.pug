extends ../layout/admin

block style 
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block contenido 
    div(class="py-0")
        
        h1.text-6x1.my-6.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-6x1.font-bold.pb-5= pagina

        div(class="bg-white shadow py-4 px-4 rounded mx-auto max-w-4xl md:px-10")
            form( id="imagen" class="dropzone object-top border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/propiedades/agregarImagen/${propiedad.id}`) 
                input(type="hidden" name="_csrf" value= csrfToken)
                
                        
            button(id="publicar" class="w-full mt-5 py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white text-center font-bold uppercase cursor-pointer" type="button" ) Publicar Propiedad
                    
block scripts 
    script(src="/js/agregarImagen.js")