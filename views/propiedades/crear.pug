extends ../layout/admin

block style 


block contenido 
    div(class="py-0")

        h1.text-6x1.my-6.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-6x1.font-bold.pb-5= pagina

        if errores 
            div(class="max-w-md mx-auto my-5")
                each error in errores
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg 

        div(class="bg-white shadow py-4 px-4 rounded mx-auto max-w-4xl md:px-10")
            form(class="space-y-8" method="POST" action="/propiedades/crear") 
                input(type="hidden" name="_csrf" value=csrfToken)
                div(class="space-y-3")
                    h3(class="text-lg leading-6 font-medium text-gray-900") Informacion General
                    p(class="text-gray-600") Añade Informacion Sobre la Propiedad en Venta

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Titulo De Propiedad
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Ej. Departamento en la Ciudad" type="text" name="titulo" value=datos.titulo ? datos.titulo : '')

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="descripcion") Descripcion de la propiedad
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Pon aqui Tu Descripcion De La Vivienda" type="text" name="descripcion")=datos.descripcion ? datos.descripcion : ''

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="barrio") Barrio
                        input#barrio.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Ej. Barrio Centro" type="text" name="barrio" value=datos.barrio ? datos.barrio : '')

                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="calle") Calle
                        input#calle.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Ej. Calle Belgrano" type="text" name="calle" value=datos.calle ? datos.calle : '')

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0") 

                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="categoria") Catergoria
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(name="categoria")
                                option(value="")  --Seleccione una Categoria--
                                each categoria in categorias
                                    option(value=categoria.id selected= datos.categoria ? datos.categoria == categoria.id ? true : false : null)= categoria.nombre 

                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(name="precio")
                                option(value="")  --Seleccione un Rango de Precio--
                                each precio in precios
                                    option(value=precio.id selected= datos.precio ? datos.precio == precio.id ? true : false : null)= precio.rango 

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0") 
                    
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="habitaciones") Numero De Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(name="habitaciones")
                                option(value="")  --N° de Habitaciones--
                                - let numeroHabitaciones = 1;
                                    while numeroHabitaciones <= 10
                                        option(value=numeroHabitaciones selected= datos.habitaciones ? datos.habitaciones == numeroHabitaciones ? true : false : null) #{numeroHabitaciones++}

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="br") Numero de Baños
                            select#br.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(name="br")
                                option(value="")  --N° de Baños-
                                - let numeroBaños = 1;
                                    while numeroBaños <= 10
                                        option(value=numeroBaños selected= datos.br ? datos.br == numeroBaños ? true : false : null) #{numeroBaños++}

                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="dimencion") Metros Cuadrados
                            select#dimencion.w-full.px-3.py-2.border.border-gray-300.rounder-md.placeholder-gray-400(name="dimencion")
                                option(value="")  --Dimencion Del Inmueble--
                                - let dimencion = 10;
                                    while dimencion <= 90
                                        option(value=dimencion selected= datos.dimencion ? datos.dimencion == dimencion ? true : false : null) #{dimencion}² a #{dimencion= dimencion + 10}²
                                - let dimencion2 = 100;
                                    while dimencion2 <= 250
                                        option(value=dimencion2 selected= datos.dimencion ? datos.dimencion == dimencion2 ? true : false : null) #{dimencion2}² a #{dimencion2= dimencion2 + 50}²
                        
                    input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white text-center font-bold uppercase cursor-pointer" type="submit" value="Añadir imagen")
                    



